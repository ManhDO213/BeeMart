<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/boder_one_line_cam"
    android:orientation="horizontal"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layoutDescription="@xml/custom_list_loai_san_pham_scene">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/layoutHoaDonChiTiet"
            android:src="@drawable/logo_app" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extra_blod"
                    android:hint="Khách hàng: "
                    android:textColor="@color/mauDenHoaDon"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvTenKhachHang"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extra_blod"
                    android:hint="Khách hàng: "
                    android:textColor="@color/mauDenHoaDon"
                    android:textSize="11sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extra_blod"
                    android:hint="Mã hoá đơn: "
                    android:textColor="@color/mauDenHoaDon"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tvMaHoaDon"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extra_blod"
                    android:hint="Mã hoá đơn: "
                    android:textColor="@color/mauDenHoaDon"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extra_blod"
                    android:hint="Tổng tiền: "
                    android:textColor="@color/mauDenHoaDon"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tvTongTien"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extra_blod"
                    android:hint="Tổng tiền: "
                    android:textColor="@color/mauDenHoaDon"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extra_blod"
                    android:hint="Ngày mua: "
                    android:textColor="@color/mauDenHoaDon"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tvNgayMua"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extra_blod"
                    android:hint="Ngày mua: "
                    android:textColor="@color/mauDenHoaDon"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extra_blod"
                    android:hint="Tình trạng: "
                    android:textColor="@color/mauDenHoaDon"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvTinhTrang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:fontFamily="@font/inter_extra_blod"
                    android:hint="Tình trạng: "
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgChiTiet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:src="@drawable/icon_chamthan" />

    </LinearLayout>

</LinearLayout>